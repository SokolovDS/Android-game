<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniil.catchme.MainActivity">


    <Button
        android:id="@+id/FindSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Найти сессию"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="265dp"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/exit"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/CreateSession"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Создать сессию"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="265dp"
        android:layout_marginBottom="178dp"
        android:layout_alignBottom="@+id/exit"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выход"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="265dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />

    <EditText
        android:id="@+id/NickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Your Nickname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NickName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="TextView" />

    <Button
        android:id="@+id/txtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/NickName"
        android:layout_toEndOf="@+id/NickName"
        android:layout_toRightOf="@+id/NickName"
        android:text="Ок" />
</RelativeLayout>
